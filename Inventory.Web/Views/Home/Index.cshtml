        $("#dialog-message").dialog({
            autoOpen: false,
            modal: true,
            buttons: {
                Ok: function () {
                    $(this).dialog("close");
                }
            }
        });
    });

    function showDialog(text) {
        $("#dialog-text").html(text);
        $("#dialog-message").dialog("open");
    }

</script>