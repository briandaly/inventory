<div data-ng-controller="inventoryController" class="container">
    <div class="row">
        <h2>Inventory</h2>

        <div class="alert alert-danger animate-show" role="alert" ng-show="error != null">{{ error }} </div>

        <p data-ng-hide="addMode"><a data-ng-click="toggleAdd()" href="javascript:;" class="btn btn-primary">Add Item</a></p>

        <div data-ng-show="loading">
            <p>Loading</p>
            <img src="Images/ajax-loader.gif" class="ajax-loader" />
        </div>

        <form name="addItem" data-ng-show="addMode" style="width:600px;">
            <div class="form-group">
                <label for="cid" class="col-sm-2 control-label">ID:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="id" placeholder="Id" data-ng-model="newitem.Id" required />
                </div>
            </div>
            <div class="form-group">
                <label for="country" class="col-sm-2 control-label">Label:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="label" placeholder="Label" data-ng-model="newitem.label" required />
                </div>
            </div>
            <div class="form-group">
                <label for="age" class="col-sm-2 control-label">Expiration Date:</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control datepicker" id="expirationDate" placeholder="Expiration Date" data-ng-model="newitem.expirationDate" required />
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <input type="submit" value="Add" data-ng-click="add()" data-ng-disabled="!addItem.$valid" class="btn btn-primary" />
                    <input type="button" value="Cancel" data-ng-click="toggleAdd()" class="btn btn-primary" />
                </div>
            </div>
            <br />
        </form>
    </div>
    <div class="row">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" style="width:800px">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Label</th>
                        <th>ExpirationDate</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tr data-ng-repeat="item in items">
                    <td><strong data-ng-hide="item.editMode">{{ item.id }}</strong></td>
                    <td>
                        <p data-ng-hide="item.editMode">{{ item.label }}</p>
                        <input data-ng-show="item.editMode" type="text" data-ng-model="item.label" />
                    </td>
                    <td>
                        <p data-ng-hide="item.editMode">{{ item.expirationDate }}</p>
                        <input class="datepicker" data-ng-show="item.editMode" type="text" data-ng-model="item.expirationDate" />
                    </td>
                    <td>
                        <p data-ng-hide="item.editMode"><a data-ng-click="toggleEdit(item)" href="javascript:;">Edit</a> | <a data-ng-click="deleteitem(item)" href="javascript:;">Delete</a></p>
                        <p data-ng-show="item.editMode"><a data-ng-click="save(item)" href="javascript:;">Save</a> | <a data-ng-click="toggleEdit(item)" href="javascript:;">Cancel</a></p>
                    </td>
                </tr>
            </table>
            <hr />
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <h2>Notifications <span class="badge">0</span></h2>
    </div>
    <div id="notifications" class="row"></div>    
</div>

<!--Script references. -->
<!--Reference the SignalR library. -->
@Scripts.Render("~/Scripts/jquery.signalR-2.0.2.min.js")
<!--Reference the autogenerated SignalR hub script. -->
<script src="signalr/hubs"></script>
<!--Add script to update the page and send messages.-->
<script type="text/javascript">
    $(function () {
        // Declare a proxy to reference the hub.
        var notify = $.connection.notificationHub;
        // Create a function that the hub can call to broadcast messages.
        notify.client.broadcastMessage = function (name, message) {
            // Html encode display name and message.
            var encodedName = $('<div />').text(name).html();
            var encodedMsg = $('<div />').text(message).html();
            // Add the message to the page.
            $('#notifications').prepend('<div class="alert alert-info" role="alert"><strong>' + encodedName
                + '</strong>:&nbsp;&nbsp;' + encodedMsg + '</div>');

            var numNotifications = $("#notifications > div").length;
            $(".badge").text(numNotifications);
            document.title = '(' + numNotifications + ') ' + 'Inventory';
        };
        // Start the connection.
        $.connection.hub.start();
    });
</script>


